<h1>All users</h1>

<table class="table table-hover">
<thead>
	<tr>
	  <th>STT</th>
		<th>Name</th>
		<th>Email</th>
		<th>Action</th>
	</tr>
</thead>
<tbody>
  <% @users.each do |user| %>        
  	<tr>
  	  <td><%= user.id%></td>
  		<td><%= link_to user.name, user %></td>
  		<td><%= user.email%></td>
  		<td><% if current_user.admin? && !current_user?(user) %>
            <%= link_to "delete", user, class: "btn btn-primary", method: :delete,
                                  data: { confirm: "You sure?" } %>
          <% end %>
      </td>
  	</tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate %>