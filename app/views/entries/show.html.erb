<div class="row">
  <aside class="col-md-4">
    <section class="entry_info">
      <h1>
        <%= @entry.user %>
        <%= @entry.title %>
        <%= @entry.content %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @entry.comments.any? %>
      <ol class="comments">
        <%= render @comments %>
      </ol>
    <% end %>
  </div>
</div>